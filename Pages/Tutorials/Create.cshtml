@page
@using Models
@model CreateModel
@{
    ViewData["Title"] = "Create tutorial";
}

<a href="./Index">Back</a>
<h1>@ViewData["Title"]</h1>

<form method="post" class="my-5">
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Comment</label>
            <input type="text" class="form-control" asp-for="Tutorial.Comment">
        </div>
    </div>
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Duration</label>
            <input type="number" class="form-control" asp-for="Tutorial.Duration">
        </div>
    </div>
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" asp-for="Tutorial.Price">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Score</label>
            <input type="number" class="form-control" asp-for="Tutorial.Score">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Status</label>
            <input type="text" class="form-control" asp-for="Tutorial.Status">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Tutor ID</label>
            <input type="number" class="form-control" asp-for="Tutorial.TutorId" value="1">
        </div>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
