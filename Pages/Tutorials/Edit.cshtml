@page "{id?}"
@using Models
@model TutorialsEditModel
@{
    ViewData["Title"] = "Edit tutorial";
}

<a href="./Index">Back</a>
<h1>@ViewData["Title"]</h1>

<form method="post" class="my-5" asp-route-itemid="currentTutorial.ID">
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Tutor Id</label>
            <input type="text" class="form-control" asp-for="currentTutorial.TutorId">
        </div>
    </div>
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Status</label>
            <input type="lastName" class="form-control" asp-for="currentTutorial.Status">
        </div>
    </div>
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Duration</label>
            <input type="date" class="form-control" asp-for="currentTutorial.Duration">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" asp-for="currentTutorial.Price">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Score</label>
            <input type="text" class="form-control" asp-for="currentTutorial.Score">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Comment</label>
            <input type="text" class="form-control" asp-for="currentTutorial.Comment">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Status</label>
            <input type="text" class="form-control" asp-for="currentTutorial.Status">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
