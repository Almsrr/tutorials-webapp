@page
@using Models
@model CreateModel
@{
    ViewData["Title"] = "Create tutor";
}

<a href="./Index">Back</a>
<h1>@ViewData["Title"]</h1>

<form method="post" class="my-5">
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Tutor.Name" value="Esmelada">
        </div>
    </div>
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" asp-for="Tutor.LastName" value="Rosario">
        </div>
    </div>
    <div class=" row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Birth Date</label>
            <input type="date" class="form-control" asp-for="Tutor.BirthDate" aria-describedby="birthDate">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Genre</label>
            <input type="text" class="form-control" asp-for="Tutor.Genre" value="F">
            <div asp-for="Tutor.EmailHelp" id="emailHelp" class="form-text">Only M and F are available</div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Tutor.Email" value="esmeralda@test.com">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Tutor.Address" value="Sunset Blvd 56, LA 10898">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-sm-5 col-md-6">
            <label class="form-label">Status</label>
            <input type="text" class="form-control" asp-for="Tutor.Status" value="Active">
        </div>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
