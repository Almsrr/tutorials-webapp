@page
@model TutorsModel
@{
    ViewData["Title"] = "Tutors";
}
<h1 class="mt-3">@ViewData["Title"]</h1>

<section class="mt-5">
    <div class="d-grid gap-2 d-md-block mb-2">
        <a class="btn btn-success text-white" href="/Tutors/Create">New</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Birth Date</th>
                <th scope="col">Genre</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tutor in @Model.tutors)
            {
                <tr>
                    <th scope="row">@tutor.ID</th>
                    <td>@tutor.Name</td>
                    <td>@tutor.LastName</td>
                    <td>@tutor.BirthDate</td>
                    <td>@tutor.Genre</td>
                    <td>@tutor.Email</td>
                    <td>@tutor.Address</td>
                    <td>@tutor.Status</td>
                    <td>
                        <a class="btn btn-outline-dark" href="./Edit">Edit</a>
                        <a class="btn btn-outline-danger" href="./Delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

